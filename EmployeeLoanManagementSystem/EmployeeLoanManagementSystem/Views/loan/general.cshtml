@model System.Data.DataTable
@{
    ViewBag.Title = "general";
}

<h2>General Loan</h2>




<table class="table table-bordered table-striped">
    <tr>
        <th style="display:none;">
            Loan Apply Id
        </th>
        <th>Loan Money</th>
        <th>Request Date</th>
        <th>Loan Request Status</th>
        <th>Reason</th>
        <th>Edit Loan</th>
        <th>Verify Document</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td style="display:none;">@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Html.ActionLink("Edit", "Edit", "loan", new { id = Model.Rows[i][0] })</td>
            <td>@Html.ActionLink("Documents", "documentsverify", "loan", new { id = Model.Rows[i][0] })</td>
        </tr>
    }
</table>
